<a class="btn btn-light btn-lg mb-3" href="/usuario/menu" role="button">
  <i class="fa fa-undo" aria-hidden="true"></i> Volver 
</a>

<div class="col offset" style="background-color: #fff;margin-top: 25px;padding:20px;">
<h3><i class="fa fa-book fa-lg" aria-hidden="true"></i> Resultados</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Sitio</th>
            <th>Código Producto</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.codigo}}</td>
            <td>{{this.id}}</td>
            <td>{{this.nombre}}</td>
            <td>{{this.descripcion}}</td>
            <td>{{this.precio}}</td>
            
            <td>
            <a id='colorCafe' href="/usuario/consultar/producto/{{this._id}}"><h5><i class="fa fa-eye fa-lg" aria-hidden="true"></h5></i></a>
            <a id='colorCafe' href="/usuario/agregarCarrito/producto/{{this._id}}"><h5><i class="fa fa-shopping-cart fa-lg" aria-hidden="true"></i></h5></a>
            </td>        
        </tr>

        
        {{/each}}
    </tbody>
</table>

<a id="colorCafe" href="/usuario/agregarCarrito/guardar" class="btn btn-dark"><h3>Guardar</h3></a>

</div>